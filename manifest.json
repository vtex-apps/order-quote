{
  "vendor": "vtex",
  "name": "orderquote",
  "version": "1.1.3",
  "title": "Order Quote",
  "description": "B2B functionality that enables you to save items from the cart with their current prices for further use",
  "builders": {
    "graphql": "1.x",
    "react": "3.x",
    "store": "0.x",
    "node": "6.x",
    "messages": "1.x",
    "docs": "0.x"
  },
  "dependencies": {
    "vtex.checkout": "0.x",
    "vtex.store": "2.x",
    "vtex.styleguide": "9.x",
    "vtex.render-runtime": "8.x",
    "vtex.checkout-resources": "0.x",
    "vtex.order-manager": "0.x",
    "vtex.store-graphql": "2.x",
    "vtex.order-items": "0.x",
    "vtex.checkout-graphql": "0.x",
    "vtex.store-resources": "0.x",
    "vtex.css-handles": "0.x",
    "vtex.format-currency": "0.x"
  },
  "registries": [
    "smartcheckout"
  ],
  "policies": [
    {
      "name": "read-workspace-apps"
    },
    {
      "name": "update-app-settings"
    },
    {
      "name": "SaveOrderFormConfiguration"
    },
    {
      "name": "POWER_USER_DS"
    },
    {
      "name": "ADMIN_DS"
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "{{account}}.vtexcommercestable.com.br",
        "path": "/api/checkout/pub/orderForm/*"
      }
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "api.vtex.com",
        "path": "/api/dataentities/*"
      }
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "{{account}}.vtexcommercestable.com.br",
        "path": "/api/checkout/pvt/configuration/orderForm"
      }
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "{{account}}.vtexcommercestable.com.br",
        "path": "/api/dataentities/cart/*"
      }
    }
  ],
  "settingsSchema": {
    "title": "Order Quote",
    "type": "object",
    "properties": {
      "hasSchema": {
        "type": "boolean",
        "default": false
      },
      "adminSetup": {
        "title": "Order Quote Settings",
        "type": "object",
        "properties": {
          "cartLifeSpan": {
            "title": "Lifespan (in days) of saved cart",
            "type": "number",
            "minimum": 1
          },
          "storeLogoUrl": {
            "title": "Store logo URL",
            "type": "string"
          }
        },
        "required": [
          "cartLifeSpan",
          "storeLogoUrl"
        ]
      }
    },
    "required": [
      "adminSetup"
    ]
  },
  "settingsUiSchema": {
    "ui:order": [
      "adminSetup",
      "hasSchema"
    ],
    "adminSetup": {
      "ui:order": [
        "cartLifeSpan",
        "storeLogoUrl"
      ]
    },
    "hasSchema": {
      "ui:widget": "hidden"
    }
  },
  "billingOptions": {
    "termsURL": "https://compliance.vtex.com/gdpr/policies/vtex-privacy-policy",
    "support": {
      "url": "https://support.vtex.com/hc/requests"
    },
    "free": true,
    "type": "free",
    "availableCountries": [
      "*"
    ]
  },
  "$schema": "https://raw.githubusercontent.com/vtex/node-vtex-api/master/gen/manifest.schema"
}
